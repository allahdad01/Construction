{
    "name": "construction-saas/platform",
    "description": "Construction Company SaaS Platform with Multi-tenant, Multi-currency, Multi-date, and Multi-language Support",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"echo 'Composer install completed successfully!';\""
        ],
        "deploy": [
            "php -r \"echo 'Deployment script completed!';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}